{
  "run": [
    {
      "method": "shell.start",
      "params": {
        "path": "."
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "npm run dev -- --port 8080",
        "on": [
          {
            "event": "/(http:\\S.+)/",
            "return": "{{event.matches[0][1]}}"
          }
        ]
      },
      "notify": true
    },
    {
      "method": "browser.open",
      "params": {
        "uri": "{{input}}",
        "target": "_blank"
      }
    },
    {
      "method": "process.wait"
    }
  ]
}
